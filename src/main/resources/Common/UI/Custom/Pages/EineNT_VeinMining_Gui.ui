            Anchor: (Height: 130);
            LayoutMode: Top;
            Padding: (Full: 13);
            TextButton #BtnModeOres { Text: "Ores Only"; Style: @StyleSecondary; Anchor: (Height: 32); }
            Group { Anchor: (Height: 4); }
            TextButton #BtnModeAll  { Text: "All Blocks"; Style: @StyleSecondary; Anchor: (Height: 32); }
            Group { Anchor: (Height: 4); }
            TextButton #BtnModeOff  { Text: "Disabled"; Style: @StyleDestructive; Anchor: (Height: 32); }
        }

        Group { Anchor: (Height: 10); }

        Label { Text: "Orientation"; Style: @LabelSection; Anchor: (Height: 18); }
        Group { Anchor: (Height: 4); }
        @BoxPanel #OrientationArea {
            Anchor: (Height: 90);
            LayoutMode: Top;
            Padding: (Full: 12);
            TextButton #BtnOriBlock  { Text: "Block Face"; Style: @StyleSecondary; Anchor: (Height: 32); }
            Group { Anchor: (Height: 4); }
            TextButton #BtnOriPlayer { Text: "Player View"; Style: @StyleSecondary; Anchor: (Height: 32); }
