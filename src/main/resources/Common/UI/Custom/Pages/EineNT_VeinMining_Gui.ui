$C = "../Common.ui";
$S = "../Sounds.ui";

/* --- 1. CUSTOM STYLES --- */

@LabelSection = LabelStyle(
  FontSize: 13,
  RenderBold: true,
  RenderUppercase: true,
  TextColor: #99AAB5
);

@StyleDestructive = TextButtonStyle(
  Default:  ( Background: PatchStyle(TexturePath: "../Common/Buttons/Tertiary.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Hovered:  ( Background: PatchStyle(TexturePath: "../Common/Buttons/Tertiary.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Disabled: ( Background: PatchStyle(TexturePath: "../Common/Buttons/Destructive.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Sounds: $S.@ButtonsLight
);

@StyleSecondary = TextButtonStyle(
  Default:  ( Background: PatchStyle(TexturePath: "../Common/Buttons/Tertiary.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Hovered:  ( Background: PatchStyle(TexturePath: "../Common/Buttons/Tertiary.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Disabled: ( Background: PatchStyle(TexturePath: "../Common/Buttons/Primary.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Sounds: $S.@ButtonsLight
);

@StylePatternBtn = ButtonStyle(
  Default:  ( Background: PatchStyle(TexturePath: "../Common/Buttons/Tertiary.png", Border: 12) ),
  Hovered:  ( Background: PatchStyle(TexturePath: "../Common/Buttons/Tertiary.png", Border: 12) ),
  Disabled: ( Background: PatchStyle(TexturePath: "../Common/Buttons/Secondary.png", Border: 12) ),
  Sounds: $S.@ButtonsLight
);

@LabelBtnFat = LabelStyle(
  FontSize: 18,
  RenderBold: true,
  TextColor: #FFFFFF,
  VerticalAlignment: Center
);

@LabelValue = LabelStyle(FontSize: 13, TextColor: #55FF55, RenderBold: true);
@LabelTip = LabelStyle(FontSize: 10, TextColor: #7F8C8D, RenderItalics: true, Wrap: true);

@BoxPanel = Group {
    Background: PatchStyle(
        TexturePath: "../Common/ContainerBackgroundSecondary.png",
        Border: 4
    );
};

/* --- 2. MAIN LAYOUT --- */

$C.@PageOverlay {
