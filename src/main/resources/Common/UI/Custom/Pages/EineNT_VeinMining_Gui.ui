$C = "../Common.ui";
$S = "../Sounds.ui";

@LabelSection = LabelStyle(
  FontSize: 12,
  RenderBold: true,
  RenderUppercase: true,
  TextColor: #99AAB5
);

@StyleDestructive = TextButtonStyle(
  Default:  ( Background: PatchStyle(TexturePath: "../Common/Buttons/Tertiary.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Hovered:  ( Background: PatchStyle(TexturePath: "../Common/Buttons/Tertiary.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Disabled: ( Background: PatchStyle(TexturePath: "../Common/Buttons/Destructive.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Sounds: $S.@ButtonsLight
);

@StyleSecondary = TextButtonStyle(
  Default:  ( Background: PatchStyle(TexturePath: "../Common/Buttons/Tertiary.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Hovered:  ( Background: PatchStyle(TexturePath: "../Common/Buttons/Tertiary.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Disabled: ( Background: PatchStyle(TexturePath: "../Common/Buttons/Primary.png", Border: 12), LabelStyle: $C.@DefaultButtonLabelStyle ),
  Sounds: $S.@ButtonsLight
);

@LabelValue = LabelStyle(FontSize: 13, TextColor: #55FF55, RenderBold: true);
@LabelTip = LabelStyle(FontSize: 10, TextColor: #7F8C8D, RenderItalics: true, Wrap: true);

@BoxPanel = Group {
    Background: PatchStyle(
        TexturePath: "../Common/ContainerBackgroundSecondary.png",
        Border: 4
    );
};

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 820, Height: 480);

    #Title {
      Group { $C.@Title { @Text = "VEIN MINING CONFIG"; } }
    }

    #Content {
      LayoutMode: Left;
      Padding: (Top: 20, Left: 20, Right: 20, Bottom: 20);

      Group {
        LayoutMode: Top;
        Anchor: (Width: 210);

        Label { Text: "Targeting Mode"; Style: @LabelSection; Anchor: (Height: 16); }
        Group { Anchor: (Height: 4); }
        @BoxPanel #TargetModeArea {
            Anchor: (Height: 100);
            LayoutMode: Top;
            Padding: (Full: 8);
            TextButton #BtnModeOres { Text: "Ores Only"; Style: @StyleSecondary; Anchor: (Height: 26); }
            Group { Anchor: (Height: 4); }
            TextButton #BtnModeAll  { Text: "All Blocks"; Style: @StyleSecondary; Anchor: (Height: 26); }
            Group { Anchor: (Height: 4); }
            TextButton #BtnModeOff  { Text: "Disabled"; Style: @StyleDestructive; Anchor: (Height: 26); }
        }

        Group { Anchor: (Height: 8); }

        Label { Text: "Activation Key"; Style: @LabelSection; Anchor: (Height: 16); }
        Group { Anchor: (Height: 4); }
        @BoxPanel #ActivationArea {
            Anchor: (Height: 72);
            LayoutMode: Top;
            Padding: (Full: 8);
            TextButton #BtnKeyWalk   { Text: "Walk"; Style: @StyleSecondary; Anchor: (Height: 26); }
            Group { Anchor: (Height: 4); }
            TextButton #BtnKeyCrouch { Text: "Crouch"; Style: @StyleSecondary; Anchor: (Height: 26); }
        }

        Group { Anchor: (Height: 8); }

        Label { Text: "Orientation"; Style: @LabelSection; Anchor: (Height: 16); }
        Group { Anchor: (Height: 4); }
        @BoxPanel #OrientationArea {
            Anchor: (Height: 72);
            LayoutMode: Top;
            Padding: (Full: 8);
            TextButton #BtnOriBlock  { Text: "Block Face"; Style: @StyleSecondary; Anchor: (Height: 26); }
            Group { Anchor: (Height: 4); }
            TextButton #BtnOriPlayer { Text: "Player View"; Style: @StyleSecondary; Anchor: (Height: 26); }
        }

        Group { Anchor: (Height: 8); }

        Label { Text: "Server Settings"; Style: @LabelSection; Anchor: (Height: 16); }
        Group { Anchor: (Height: 4); }
        @BoxPanel #ServerInfoArea {
            FlexWeight: 1;
            LayoutMode: Top;
            Padding: (Full: 10);
            Group { FlexWeight: 1; }
            Group {
                LayoutMode: Left;
                Anchor: (Height: 14);
                Label { Text: "Block Limit: "; Style: (FontSize: 13, TextColor: #AAAAAA); }
                Label #LblBlockLimit { Text: "50"; Style: @LabelValue; }
            }
            Group { Anchor: (Height: 4); }
            Label { Text: "Defined by server config"; Style: @LabelTip; }
            Group { FlexWeight: 1; }
        }
      }

      Group { Anchor: (Width: 15); }
      Group { Anchor: (Width: 2); Background: #FFFFFF(0.08); }
      Group { Anchor: (Width: 15); }

      Group {
        LayoutMode: Top;
        FlexWeight: 1;

        Label { Text: "Excavation Patterns"; Style: @LabelSection; Anchor: (Height: 16); }
        Group { Anchor: (Height: 4); }

        @BoxPanel #PatternsArea {
            FlexWeight: 1;
            LayoutMode: Left;
            Padding: (Full: 12);

            Group #ColLeft { FlexWeight: 1; LayoutMode: Top; }
            Group { Anchor: (Width: 10); }
            Group #ColRight { FlexWeight: 1; LayoutMode: Top; }
        }
      }
    }
  }
}

$C.@BackButton {}