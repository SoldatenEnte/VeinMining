$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 400, Height: 380);

    #Title {
      Group {
        $C.@Title {
          @Text = "VEIN MINING";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Top: 20, Left: 20, Right: 20, Bottom: 20);

      Label {
        Text: "Select active mining mode:";
        Style: (TextColor: #BBBBBB, FontSize: 16);
        Padding: (Bottom: 15);
      }

      Group {
        LayoutMode: Top;
        Background: $C.@InputBoxBackground;
        Padding: (Full: 10);

        TextButton #BtnModeOres {
          Anchor: (Height: 45, Horizontal: 0);
          Text: "ORES ONLY";
          Style: TextButtonStyle(
            Default: (
                LabelStyle: (TextColor: #FFD700, FontSize: 16, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true),
                Background: (Color: #FFFFFF(0.1))
            ),
            Hovered: (
                LabelStyle: (TextColor: #FFFFAA, FontSize: 16, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true),
                Background: (Color: #FFFFFF(0.2))
            ),
            Disabled: (
                LabelStyle: (TextColor: #55FF55, FontSize: 16, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true),
                Background: (Color: #55FF55(0.2))
            )
          );
        }

        Group { Anchor: (Height: 10); }

        TextButton #BtnModeAll {
          Anchor: (Height: 45, Horizontal: 0);
          Text: "ALL BLOCKS";
          Style: TextButtonStyle(
            Default: (
                LabelStyle: (TextColor: #FFFFFF, FontSize: 16, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true),
                Background: (Color: #FFFFFF(0.1))
            ),
            Hovered: (
                LabelStyle: (TextColor: #DDDDDD, FontSize: 16, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true),
                Background: (Color: #FFFFFF(0.2))
            ),
            Disabled: (
                LabelStyle: (TextColor: #55FF55, FontSize: 16, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true),
                Background: (Color: #55FF55(0.2))
            )
          );
        }

        Group { Anchor: (Height: 10); }

        TextButton #BtnModeOff {
          Anchor: (Height: 45, Horizontal: 0);
          Text: "DISABLED";
          Style: TextButtonStyle(
            Default: (
                LabelStyle: (TextColor: #FF5555, FontSize: 16, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true),
                Background: (Color: #FFFFFF(0.1))
            ),
            Hovered: (
                LabelStyle: (TextColor: #FF7777, FontSize: 16, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true),
                Background: (Color: #FFFFFF(0.2))
            ),
            Disabled: (
                LabelStyle: (TextColor: #AAAAAA, FontSize: 16, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true),
                Background: (Color: #000000(0.3))
            )
          );
        }
      }

      Group { Anchor: (Height: 20); }

      Label {
        Text: "Green highlight indicates the currently active mode.";
        Style: (TextColor: #666666, FontSize: 12, HorizontalAlignment: Center);
        Anchor: (Width: 360);
      }
    }
  }
}

$C.@BackButton {}